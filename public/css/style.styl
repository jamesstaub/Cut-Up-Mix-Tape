body
  font: 14px "Courier", sans-serif
nav
  background-color black

h1
  text-align center

a
  color: #00B7FF

.me li
  display inline

.input-container
  height 600px

button .cutup-ctrl
  width 100%
  height 48px
  font-size 24px


textarea
  font-size 32px
  height 100%
  border solid 1px transparent
  text-align center
  outline 0px !important;
  -webkit-appearance:none;


.lists
  max-height 500px
  overflow scroll

.panel
  position fixed
  width 100%
  bottom 0

.save-button
  float right

// drag and drop interface
.cutup-list ul[dnd-list],
.cutup-list ul[dnd-list] > li {
  position: relative;
}

.cutup-list ul[dnd-list] {
    min-height: 42px;
    padding-left: 0px;
}

.cutup-list ul[dnd-list] .dndDraggingSource {
    display: none;
}


.cutup-list ul[dnd-list] .dndPlaceholder {
    display: block;
    background-color: #ddd;
    min-height: 42px;
}


.cutup-list ul[dnd-list] li {
    background-color: #fff;
    border: 1px solid #ddd;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    display: block;
    padding: 10px 15px;
    margin-bottom: -1px;
}

.cutup-list ul[dnd-list] li.selected {
    background-color: #dff0d8;
    color: #3c763d;
}
