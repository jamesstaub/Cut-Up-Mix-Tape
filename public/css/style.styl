}
// drag and drop interface
.cutup-list ul[dnd-list],
.cutup-list ul[dnd-list] > li {
  position: relative;
}

.cutup-list ul[dnd-list] {
    min-height: 42px;
    padding-left: 0px;
}

.cutup-list ul[dnd-list] .dndDraggingSource {
    display: none;
}


.cutup-list ul[dnd-list] .dndPlaceholder {
    display: block;
    background-color: #ddd;
    min-height: 42px;
}


.cutup-list ul[dnd-list] li {
    background-color: #fff;
    border: 1px solid #ddd;
    border-top-right-radius: 4px;
    border-top-left-radius: 4px;
    display: block;
    padding: 10px 15px;
    margin-bottom: -1px;
}

.cutup-list ul[dnd-list] li.selected {
    background-color: #dff0d8;
    color: #3c763d;
}
