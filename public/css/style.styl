body
  font: 18px "Courier", sans-serif
nav
  background-color black

h1
  text-align center

a
  color: #00B7FF

.me li
  display inline


button .cutup-ctrl
  width 100%
  height 48px
  font-size 24px

input
  font-size 32px !important
  height 100%
  border solid 1px transparent
  text-align center
  outline 0px !important;
  -webkit-appearance:none;

.lists
  position relative
  span
    top -20px;

.cutup-list
  height 60vh
  overflow scroll


.panel
  background-color black
  color white
  position fixed
  padding 15px
  width 100%
  height 20vh
  bottom 0px
  left 0
  h3
    font-size 24px
.img-container
  width 300px
  float left
  img
    width auto
    height 180px

.loading
  margin 0 auto
  display block
  width 65px

.save-button
  float right
  margin-right 20px

// force the results to the right column
.col-cutup{
  float right!important
}
// drag and drop interface
.cutup-list ul[dnd-list],
.cutup-list ul[dnd-list] > li {
  position: relative;
}

.cutup-list ul[dnd-list] {
    min-height: 42px;
    padding-left: 0px;
}

.cutup-list ul[dnd-list] .dndDraggingSource {
    display: none;
}


.cutup-list ul[dnd-list] .dndPlaceholder {
    display: block;
    background-color: #ddd;
    min-height: 42px;
}


.cutup-list ul[dnd-list] li {
    display: block;
    padding: 10px 15px;

}

.cutup-list ul[dnd-list] li.selected {
    color #26a69a
    padding 10px
}


.lyric-controls, .trim-controls
  padding-left 10px
  float right

.highlighted
  background-color yellow


.cutup-list ul li
  // relative

.trim-interface
  background-color #ddd
  color #f00
  position absolute
  width 100%
  left 0
  top 0
  padding 5px
